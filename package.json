{
    "name": "sparxstar-3iatlas-dictionary",
    "private": true,
    "scripts": {
        "build": "npm run build:css",
        "build:css": "tailwindcss -i ./src/css/iatlas-dictionary-form.css -o ./assets/css/iatlas-dictionary-form.css --minify",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint .",
        "lint:css": "stylelint \"**/*.css\"",
        "format": "prettier --write .",
        "test": "jest",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.php": [
            "phpcs -q",
            "composer run analyze:php"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "version": "1.0.0",
    "description": "SPARXSTAR 3iAtlas Dictionary - A WordPress plugin for dictionary management with SCF and WPGraphQL integration.",
    "main": "commitlint.config.js",
    "directories": {
        "doc": "docs",
        "example": "examples",
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary/issues"
    },
    "homepage": "https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary#readme",
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@wordpress/scripts": "^31.2.0",
        "autoprefixer": "^10.4.23",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "tailwindcss": "^4.1.18"
    },
    "dependencies": {
        "@apollo/client": "^4.0.12",
        "graphql": "^16.12.0",
        "lucide-react": "^0.562.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-virtuoso": "^4.18.1"
    }
}