{
    "name": "sparxstar-3iatlas-dictionary",
    "private": true,
    "scripts": {
        "build": "webpack",
        "watch": "webpack --watch",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint . --fix",
        "lint:css": "stylelint \"src/**/*.css\" --fix",
        "docs:js": "jsdoc -c jsdoc.json",
        "format": "prettier --write .",
        "test": "jest --passWithNoTests",
        "prepare": "husky"
    },
    "version": "0.9.0",
    "description": "SPARXSTAR 3iAtlas Dictionary - A WordPress plugin for dictionary management with SCF and WPGraphQL integration.",
    "main": "commitlint.config.js",
    "directories": {
        "doc": "docs",
        "example": "examples",
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary.git"
    },
    "keywords": [],
    "author": "Starisian Technologies <support@starisian.com>",
    "license": "proprietary",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary/issues"
    },
    "homepage": "https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary#readme",
     "dependencies": {
        "@apollo/client": "^3.13.0",
        "graphql": "^16.8.1",
        "lucide-react": "^0.300.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-virtuoso": "^4.6.2"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "@babel/preset-react": "^7.23.0",
        "@wordpress/scripts": "^31.3.0",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "css-loader": "^6.8.1",
        "css-minimizer-webpack-plugin": "^5.0.1",
        "eslint": "^8.56.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.0",
        "mini-css-extract-plugin": "^2.7.6",
        "postcss": "^8.4.32",
        "postcss-loader": "^7.3.3",
        "prettier": "^3.1.1",
        "tailwindcss": "^3.4.0",
        "terser-webpack-plugin": "^5.3.9",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.php": [
            "phpcs -q",
            "composer run analyze:php"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "overrides": {
        "webpack-dev-server": "^5.2.1"
    }
}
