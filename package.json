{
    "name": "sparxstar-3iatlas-dictionary",
    "private": true,
    "scripts": {
        "build": "webpack",
        "watch": "webpack --watch",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint . --fix",
        "lint:css": "stylelint \"src/**/*.css\" --fix",
        "docs:js": "jsdoc -c jsdoc.json",
        "format": "prettier --write .",
        "test": "jest",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.php": [
            "phpcs -q",
            "composer run analyze:php"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "version": "1.0.0",
    "description": "SPARXSTAR 3iAtlas Dictionary - A WordPress plugin for dictionary management with SCF and WPGraphQL integration.",
    "main": "commitlint.config.js",
    "directories": {
        "doc": "docs",
        "example": "examples",
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary/issues"
    },
    "homepage": "https://github.com/Starisian-Technologies/sparxstar-3iatlas-dictionary#readme",
    "devDependencies": {
        "@babel/core": "^7.28.6",
        "@babel/preset-env": "^7.28.6",
        "@babel/preset-react": "^7.28.5",
        "@eslint/js": "^9.39.2",
        "@tailwindcss/postcss": "^4.1.18",
        "@wordpress/scripts": "^31.2.0",
        "autoprefixer": "^10.4.23",
        "babel-loader": "^10.0.0",
        "clean-jsdoc-theme": "^4.3.0",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.4",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jsdoc": "^4.0.5",
        "lint-staged": "^16.2.7",
        "mini-css-extract-plugin": "^2.9.4",
        "postcss": "^8.5.6",
        "postcss-loader": "^8.2.0",
        "prettier": "^3.7.4",
        "style-loader": "^4.0.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "tailwindcss": "^4.1.18",
        "terser-webpack-plugin": "^5.3.16",
        "webpack": "^5.104.1",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@apollo/client": "^4.0.12",
        "graphql": "^16.12.0",
        "lucide-react": "^0.562.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-virtuoso": "^4.18.1"
    }
}