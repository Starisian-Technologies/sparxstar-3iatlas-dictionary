{
  "name": "starisian/sparxstar-3iatlas-dictionary",
  "description": "SPARXSTAR 3iAtlas Dictionary - A WordPress plugin for dictionary management with SCF and WPGraphQL integration.",
  "license": "proprietary",
  "authors": [
    {
      "name": "Max Barrett",
      "email": "support@starisian.com",
      "homepage": "https://www.starisian.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "composer/installers": "^2.3"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "phpstan/phpstan": "^1",
    "phpunit/phpunit": "^10",
    "squizlabs/php_codesniffer": "^3",
    "wp-coding-standards/wpcs": "^3"
  },
  "autoload": {
    "psr-4": {
      "Starisian\\src\\": "src/"
    }
  },
  "scripts": {
    "lint:php": "phpcs -q",
    "analyze:php": "phpstan analyse -c phpstan.neon.dist --no-progress",
    "test:php": "phpunit",
    "post-install-cmd": ["@composer dump-autoload"],
    "post-update-cmd": ["@composer dump-autoload"]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-name": "sparxstar-3iatlas-dictionary",
    "wordpress-plugin-dependencies": {
      "Smart Custom Fields (SCF)": {
        "slug": "smart-custom-fields",
        "required": true,
        "uri": "https://wordpress.org/plugins/smart-custom-fields/"
      },
      "WPGraphQL": {
        "slug": "wp-graphql",
        "required": true,
        "uri": "https://www.wpgraphql.com/"
      }
    }
  }
}
