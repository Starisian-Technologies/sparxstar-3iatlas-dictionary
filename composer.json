{
  "name": "starisian/sparxstar-3iatlas-dictionary",
  "description": "SPARXSTAR 3iAtlas Dictionary - A WordPress plugin for dictionary management with SCF and WPGraphQL integration.",
  "license": "proprietary",
  "authors": [
    {
      "name": "Max Barrett",
      "email": "support@starisian.com",
      "homepage": "https://www.starisian.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "composer/installers": "^2.3"
  },
  "require-dev": {
    "automattic/vipwpcs": "^3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "php-stubs/acf-pro-stubs": "^6.5",
    "phpcompatibility/php-compatibility": "*",
    "phpdocumentor/phpdocumentor": "^3.9",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^1",
    "phpunit/phpunit": "^10",
    "squizlabs/php_codesniffer": "^3",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "wp-coding-standards/wpcs": "^3"
  },
  "autoload": {
    "psr-4": {
      "Starisian\\Sparxstar\\IAtlas\\": "src/"
    }
  },
  "scripts": {
    "lint:php": "phpcs -q",
    "fix:php": "phpcbf",
    "analyze:php": "phpstan analyse -c phpstan.neon.dist --no-progress",
    "docs:php": "docker run --rm -v $(pwd):/data phpdoc/phpdoc:3",
    "test:php": "phpunit",
    "post-install-cmd": [
      "@composer dump-autoload"
    ],
    "post-update-cmd": [
      "@composer dump-autoload"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "installer-name": "sparxstar-3iatlas-dictionary"
  }
}